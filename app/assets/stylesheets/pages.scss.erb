html, body {
	font-family: 'Roboto', san-serif;
	color: black;
}

.header .container {
	margin-top: 50px;
	font-size: 18px;
}

.header .container li {
	display: inline;
	text-decoration: none;
	padding-right: 20px;
}

.header .container li a {
	color: black;
	text-decoration: none;
}

.header .container li a:hover {
	color: #244E8B;
}

.main.home .jumbotron {
	background: image-url('cover.jpg') no-repeat center center fixed;
	background-size: cover;
	height: 425px;
	width: 100%;
	background-position: 0px -50px;
	color: white;
	margin-top: 25px
}

.main.home .jumbotron h2 {
	margin-top: 50px;
	font-size: 55px;
	text-align: right;
}

.main.home span {
	color: #244E8B;
	background-color: white;
	padding-left: 15px;
	padding-right: 15px;
}

.main.home .btn {
	font-size: 20px;
	background: black;
	border-radius: 0px;
}

.main.home a {
	color: white;
	text-decoration: none;
}

.main.home a:hover {
	color: #2A508F;
}

.banner { position: relative; overflow: auto; }
.banner ul { padding: 0; list-style: none; }
.banner ul li { float: left; }
.banner img { width: 100%; }


